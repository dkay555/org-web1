<script>
  // Jahr automatisch
  document.querySelectorAll('.year-auto').forEach(el => {
    el.textContent = new Date().getFullYear();
  });

  // Modal Logic
  (function () {
    const dialogs = document.querySelectorAll("dialog");

    document.addEventListener("click", function (e) {
      const openBtn = e.target.closest("[data-open]");
      const closeBtn = e.target.closest("[data-close]");

      if (openBtn) {
        e.preventDefault();
        const dlg = document.getElementById(openBtn.dataset.open);
        if (dlg && !dlg.open) dlg.showModal();
      }

      if (closeBtn) {
        const dlg = closeBtn.closest("dialog");
        if (dlg) dlg.close();
      }
    });

    // Tap outside closes
    dialogs.forEach(dlg => {
      dlg.addEventListener("click", e => {
        const rect = dlg.getBoundingClientRect();
        const inside =
          e.clientX >= rect.left && e.clientX <= rect.right &&
          e.clientY >= rect.top  && e.clientY <= rect.bottom;
        if (!inside) dlg.close();
      });
    });

    // ESC closes
    document.addEventListener("keydown", e => {
      if (e.key === "Escape") {
        dialogs.forEach(dlg => dlg.open && dlg.close());
      }
    });
  })();

  // Tab-Switching für Modal-Pillen UND Sektionen
  document.addEventListener("click", function(e) {
    // Klick auf Pill
    const pill = e.target.closest(".pill");
    // Klick auf Sektion selbst
    const section = e.target.closest(".section-content");

    if (!pill && !section) return;

    const modal = pill ? pill.closest("dialog") : section.closest("dialog");
    let sectionId;

    if (pill) {
      sectionId = pill.dataset.section;
    } else if (section) {
      sectionId = section.id;
    }

    // Alle Pills deaktivieren
    modal.querySelectorAll(".pill").forEach(p => {
      if (p.dataset.section === sectionId) {
        p.classList.add("active");
      } else {
        p.classList.remove("active");
      }
    });

    // Alle Sektionen deaktivieren
    modal.querySelectorAll(".section-content").forEach(s => s.classList.remove("active"));

    // Geklickte Sektion hervorheben
    const activeSection = modal.querySelector(`#${sectionId}`);
    if (activeSection) {
      activeSection.classList.add("active");
      // Smooth scroll zur Sektion
      activeSection.scrollIntoView({ behavior: "smooth", block: "nearest" });
    }
  });
</script>
