<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- ===== SEO Basics ===== -->
  <title>{{ title }}</title>
  <meta name="description" content="{{ description }}" />
  <meta name="robots" content="{{ robots | default('index, follow') }}" />
  <link rel="canonical" href="{{ canonical | default('https://babixgo.de' + page.url) }}" />

  <!-- Open Graph -->
  <meta property="og:title" content="{{ openGraph.title | default(title) }}" />
  <meta property="og:description" content="{{ openGraph.description | default(description) }}" />
  <meta property="og:type" content="{{ openGraph.type | default('website') }}" />
  <meta property="og:url" content="{{ openGraph.url | default(canonical | default('https://babixgo.de' + page.url)) }}" />
  <meta property="og:site_name" content="babixGO" />

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content="{{ openGraph.title | default(title) }}" />
  <meta name="twitter:description" content="{{ openGraph.description | default(description) }}" />

  <!-- Styles -->
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&family=Inter:wght@400;500&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="/assets/css/style.css" />

  {% if structuredData %}
  <!-- Structured Data -->
  {{ structuredData | safe }}
  {% endif %}

  <!-- ===== TRACKING CODE ===== -->
  <!-- Meta Pixel Code -->
