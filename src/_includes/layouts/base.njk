<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- ===== SEO Basics ===== -->
  <title>{{ title }}</title>
  <meta name="description" content="{{ description }}" />
  <meta name="robots" content="{{ robots | default('index, follow') }}" />
  <link rel="canonical" href="{{ canonical | default('https://babixgo.de' + page.url) }}" />

  <!-- Open Graph -->
  <meta property="og:title" content="{{ openGraph.title | default(title) }}" />
  <meta property="og:description" content="{{ openGraph.description | default(description) }}" />
  <meta property="og:type" content="{{ openGraph.type | default('website') }}" />
  <meta property="og:url" content="{{ openGraph.url | default(canonical | default('https://babixgo.de' + page.url)) }}" />
  <meta property="og:site_name" content="babixGO" />
  <meta property="og:image" content="{{ openGraph.image | default('https://babixgo.de/assets/img/og-default.jpg') }}" />
  <meta property="og:image:alt" content="{{ openGraph.imageAlt | default(description) }}" />

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content="{{ openGraph.title | default(title) }}" />
  <meta name="twitter:description" content="{{ openGraph.description | default(description) }}" />
  <meta name="twitter:image" content="{{ openGraph.image | default('https://babixgo.de/assets/img/og-default.jpg') }}" />

  <!-- Preconnect for performance -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  
  <!-- Styles -->
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&family=Inter:wght@400;500&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="/assets/css/style.css" />

  {% if structuredData %}
  <!-- Structured Data (page-specific) -->
  {{ structuredData | safe }}
  {% else %}
  <!-- Structured Data (site-wide) -->
  <script type="application/ld+json">
{{ site.organization | dump | safe }}
  </script>
  <script type="application/ld+json">
{{ site.website | dump | safe }}
  </script>
  {% endif %}
</head>

<body>
  <div class="box">

    {% include "partials/header.njk" %}

    {{ content | safe }}

    {% include "partials/footer.njk" %}

  </div>

  {% include "partials/cookie-banner.njk" %}
</body>
</html>
