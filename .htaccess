# .htaccess für babixgo.de
# Letzte Aktualisierung: 2026-01-04

# ==========================================
# SICHERHEIT & VERZEICHNISSCHUTZ
# ==========================================

# Verzeichnis-Listing deaktivieren
Options -Indexes

# Sensible Dateien schützen
<FilesMatch "^\.">
  Order allow,deny
  Deny from all
</FilesMatch>

# Schutz für bestimmte Dateitypen
<FilesMatch "\.(apk|sh|sql|zip|tar|gz|env|ini|log)$">
  Header set X-Robots-Tag "noindex, nofollow, nosnippet"
  Order Deny,Allow
  Deny from all
  # Erlaube nur für bestimmte IPs (optional)
  # Allow from 127.0.0.1
</FilesMatch>

# ==========================================
# FEHLERSEITEN
# ==========================================

ErrorDocument 404 /404.html
ErrorDocument 403 /404.html
ErrorDocument 500 /404.html

# ==========================================
# KOMPRESSION (GZIP)
# ==========================================

<IfModule mod_deflate.c>
  # Komprimiere Text-Dateien
  AddOutputFilterByType DEFLATE text/html
  AddOutputFilterByType DEFLATE text/css
  AddOutputFilterByType DEFLATE text/javascript
  AddOutputFilterByType DEFLATE text/xml
  AddOutputFilterByType DEFLATE text/plain
  AddOutputFilterByType DEFLATE application/xml
  AddOutputFilterByType DEFLATE application/xhtml+xml
  AddOutputFilterByType DEFLATE application/rss+xml
  AddOutputFilterByType DEFLATE application/javascript
  AddOutputFilterByType DEFLATE application/x-javascript
  AddOutputFilterByType DEFLATE application/json
  AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# ==========================================
# BROWSER CACHING
# ==========================================

<IfModule mod_expires.c>
  ExpiresActive On
  
  # Standard: 1 Woche
  ExpiresDefault "access plus 1 week"
  
  # HTML: keine Cache
  ExpiresByType text/html "access plus 0 seconds"
  
  # CSS & JavaScript: 1 Monat
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType text/javascript "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  
  # Bilder: 1 Jahr
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"
  
  # Fonts: 1 Jahr
  ExpiresByType font/ttf "access plus 1 year"
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType application/font-woff "access plus 1 year"
  
  # Medien: 1 Jahr
  ExpiresByType video/mp4 "access plus 1 year"
  ExpiresByType audio/mpeg "access plus 1 year"
</IfModule>

# Alternative Cache-Kontrolle falls mod_expires nicht verfügbar
<IfModule mod_headers.c>
  # Cache für 1 Monat (für statische Assets)
  <FilesMatch "\.(ico|jpg|jpeg|png|gif|svg|webp|css|js|woff|woff2|ttf)$">
    Header set Cache-Control "max-age=2592000, public"
  </FilesMatch>
  
  # Kein Cache für HTML
  <FilesMatch "\.(html|htm)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires 0
  </FilesMatch>
</IfModule>

# ==========================================
# SICHERHEITS-HEADER
# ==========================================

<IfModule mod_headers.c>
  # XSS Protection
  Header set X-XSS-Protection "1; mode=block"
  
  # Verhindert MIME-Type Sniffing
  Header set X-Content-Type-Options "nosniff"
  
  # Clickjacking Protection
  Header set X-Frame-Options "SAMEORIGIN"
  
  # Referrer Policy
  Header set Referrer-Policy "strict-origin-when-cross-origin"
  
  # Content Security Policy (anpassen nach Bedarf)
  Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://connect.facebook.net https://www.googletagmanager.com https://cdnjs.cloudflare.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://www.google-analytics.com https://www.facebook.com; frame-src https://www.facebook.com;"
  
  # HSTS (nur aktivieren wenn HTTPS läuft!)
  # Header set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
</IfModule>

# ==========================================
# HTTPS REDIRECT (nur aktivieren wenn SSL-Zertifikat vorhanden)
# ==========================================

# <IfModule mod_rewrite.c>
#   RewriteEngine On
#   RewriteCond %{HTTPS} off
#   RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
# </IfModule>

# ==========================================
# WWW REDIRECT (www zu non-www oder umgekehrt)
# ==========================================

<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Option 1: www zu non-www (empfohlen für babixgo.de)
  RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
  RewriteRule ^(.*)$ https://%1/$1 [R=301,L]
  
  # Option 2: non-www zu www (auskommentiert)
  # RewriteCond %{HTTP_HOST} !^www\. [NC]
  # RewriteRule ^(.*)$ https://www.%{HTTP_HOST}/$1 [R=301,L]
</IfModule>

# ==========================================
# TRAILING SLASH HANDLING
# ==========================================

<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Füge trailing slash für Verzeichnisse hinzu
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_URI} !(.*)/$
  RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1/ [L,R=301]
</IfModule>

# ==========================================
# CLEAN URLs (index.html entfernen)
# ==========================================

<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # /page/index.html zu /page/ umleiten
  RewriteCond %{THE_REQUEST} ^.*/index\.html
  RewriteRule ^(.*)index\.html$ https://%{HTTP_HOST}/$1 [R=301,L]
  
  # Automatisch index.html anhängen wenn Verzeichnis aufgerufen wird
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^(.*)$ $1index.html [L]
</IfModule>

# ==========================================
# CHARSET & MIME TYPES
# ==========================================

AddDefaultCharset UTF-8
DefaultLanguage de

<IfModule mod_mime.c>
  # HTML
  AddType text/html .html .htm
  
  # JavaScript
  AddType text/javascript .js
  AddType application/json .json
  
  # CSS
  AddType text/css .css
  
  # Bilder
  AddType image/svg+xml .svg
  AddType image/webp .webp
  
  # Fonts
  AddType application/font-woff .woff
  AddType application/font-woff2 .woff2
  AddType application/x-font-ttf .ttf
  
  # Andere
  AddType application/xml .xml
  AddType text/plain .txt
</IfModule>

# ==========================================
# SPEZIELLE REGELN FÜR BABIXGO
# ==========================================

# /public/ Verzeichnis: Downloads erlaubt, aber nicht indexiert
<Directory "/public/">
  Options -Indexes
  <FilesMatch "\.(apk|sh)$">
    Header set X-Robots-Tag "noindex, nofollow"
  </FilesMatch>
</Directory>

# Erlaube Downloads aber verhindere direkte Auflistung
<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Blockiere direkten Zugriff auf /public/ Index
  RewriteRule ^public/?$ - [F,L]
  
  # Erlaube nur spezifische Dateien
  RewriteCond %{REQUEST_URI} ^/public/
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteRule ^.*$ - [F,L]
</IfModule>

# ==========================================
# PERFORMANCE OPTIMIERUNGEN
# ==========================================

# ETags deaktivieren (für besseres Caching)
<IfModule mod_headers.c>
  Header unset ETag
</IfModule>
FileETag None

# Prefetch/Preconnect Headers für externe Ressourcen
<IfModule mod_headers.c>
  <FilesMatch "\.html$">
    Header add Link "<https://fonts.googleapis.com>; rel=preconnect; crossorigin"
    Header add Link "<https://fonts.gstatic.com>; rel=preconnect; crossorigin"
    Header add Link "<https://www.googletagmanager.com>; rel=preconnect"
    Header add Link "<https://connect.facebook.net>; rel=preconnect"
  </FilesMatch>
</IfModule>

# ==========================================
# HOTLINK PROTECTION (Bilder)
# ==========================================

# Verhindert dass andere Seiten deine Bilder direkt einbinden
<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Erlaube nur eigene Domain und direkte Aufrufe
  RewriteCond %{HTTP_REFERER} !^$
  RewriteCond %{HTTP_REFERER} !^https?://babixgo\.de [NC]
  RewriteCond %{HTTP_REFERER} !^https?://www\.babixgo\.de [NC]
  
  # Blockiere Hotlinking für Bilder (außer für Social Media Bots)
  RewriteCond %{HTTP_USER_AGENT} !^.*(facebook|twitter|whatsapp|telegram).*$ [NC]
  RewriteRule \.(jpg|jpeg|png|gif|svg|webp)$ - [F,L]
</IfModule>

# ==========================================
# ENDE
# ==========================================
